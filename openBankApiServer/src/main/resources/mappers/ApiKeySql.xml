<mapper namespace="com.kopo.openbankapiserver.dao.ApiKeyDao">
    <select id="selectByKey" parameterType="String" resultType="ApiKeyDto">
        SELECT 	*
        FROM	APIKEYS_TB
        WHERE	APIKEY_CD = #{apiKey}
    </select>
    <insert id="insert" parameterType="ApiKeyDto">
        INSERT INTO APIKEYS_TB(APIKEY_CD, BANK1_ID, BANK2_ID, BANK3_ID, BANK4_ID)
        VALUES(#{apiKey}, #{bank1Id, jdbcType=VARCHAR},
               #{bank2Id, jdbcType=VARCHAR}, #{bank3Id, jdbcType=VARCHAR},
               #{bank4Id, jdbcType=VARCHAR})
    </insert>
